doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My calculator
        link(rel="stylesheet", href="./styles.css")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap" rel="stylesheet">
    body 
        header 
            h1 My calculator
        main
            .screen 
                span.screen-contain     
            .main-container
                .specials-container    
                    button.special#off  OFF
                    button.special#per  % 
                    button.special#ac  AC 
                    button.special#c  C 
                .numbers-container 
                    button.numbers#one(value = 1) 1
                    button.numbers#two(value = 2) 2
                    button.numbers#three(value = 3) 3
                    button.numbers#four(value = 4) 4
                    button.numbers#five(value = 5) 5
                    button.numbers#six(value = 6) 6
                    button.numbers#seven(value = 7) 7
                    button.numbers#eight(value = 8) 8
                    button.numbers#nine(value = 9) 9
                    button.numbers#cero(value = 0) 0
                    button.numbers#equal(value = '=') =
                    button.numbers#point(value = '.') .
                .operators-container
                    button.operator#add + 
                    button.operator#sub -
                    button.operator#divi รท
                    button.operator#mult x
        script(src="./main.js") 
        footer 
                h1  Rubenbot77 github.com

                    
