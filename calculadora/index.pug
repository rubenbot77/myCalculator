doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My calculator
        link(rel="stylesheet", href="./styles.css")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap" rel="stylesheet">
    body 
        header 
            h1 My calculator
        main
            .screen 
                    #acumulate-value 
                    #current-value     
            .main-container
                .specials-container    
                    button.operator(value = 'persentage') %
                    button(onclick = "display.delete()")   ←
                    button.operator(value = 'exponential')  xˣ
                    button(onclick = "display.deleteAll()")  C 
                .numbers-container 
                    button.numbers 1
                    button.numbers 2
                    button.numbers 3
                    button.numbers 4
                    button.numbers 5
                    button.numbers 6
                    button.numbers 7
                    button.numbers 8
                    button.numbers 9
                    button.numbers 0
                    button.operator(value = 'equal') =
                    button.numbers#point .
                .operators-container
                    button.operator#add(value = 'add') + 
                    button.operator#sub(value = 'subtract') -
                    button.operator#divi(value = 'divide') ÷
                    button.operator#mult(value = 'multiply') x
        script(src="./main.js") 
        footer 
                h1  Rubenbot77 github.com

                    
